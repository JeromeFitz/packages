{
  "name": "@jeromefitz/scripts",
  "version": "0.0.0",
  "description": "Scripts",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git",
    "directory": "packages/scripts"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "type": "module",
  "exports": "./dist/index.js",
  "scripts": {
    "zzz:build": "tsc --build src",
    "zzz:lint-eslint": "eslint . --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "zzz:lint-fix": "yarn prettier-fix && eslint . --ext cjs,js,jsx,mjs,ts,tsx --fix --max-warnings=0",
    "zzz:lint-typescript": "yarn typescript",
    "zzz:lint": "yarn lint-typescript && yarn prettier-check && yarn lint-eslint",
    "tsc:watch": "tsc -w --preserveWatchOutput",
    "prepublish": "yarn build",
    "prettier-check": "prettier --check \"**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "prettier-fix": "prettier --write \"**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "pretty-quick": "pretty-quick",
    "semantic-release": "echo semantic-release",
    "test": "echo skip @jeromefitz/scripts test",
    "typescript": "tsc --noEmit --declaration",
    "---": "",
    "build": "yarn clean && tsup src/* --format esm,cjs --minify --no-splitting --target node16",
    "dev": "tsup src/* --format esm,cjs --watch --minify --no-splitting --target node16",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "yarn clean && rm -rf node_modules"
  },
  "dependencies": {
    "@octokit/rest": "18.12.0"
  },
  "files": [
    "dist/**",
    "package.json",
    "README.md"
  ]
}
