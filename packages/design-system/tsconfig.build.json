{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": [
    ".storybook/*.ts",
    ".storybook/*.tsx",
    "node_modules",
    "pages",
    "scripts",
    "tests/*.test.ts"
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/.*.tsx"]
}
