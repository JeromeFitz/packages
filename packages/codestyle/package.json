{
  "name": "@jeromefitz/codestyle",
  "version": "0.0.0",
  "description": "ESLint + TypeScript + Prettier + Lint Staged",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git",
    "directory": "packages/codestyle"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "private": false,
  "type": "module",
  "bin": {
    "jeromefitz-pretty-quick": "./node_modules/pretty-quick/bin/pretty-quick.js"
  },
  "main": "index.js",
  "files": [
    ".eslintrc.cjs",
    ".eslintrc.next.cjs",
    ".prettierrc.cjs",
    "tsconfig.base.json",
    "tsconfig.jest.json",
    "tsconfig.next.json",
    "tsconfig.node-14.json",
    "tsconfig.node-16.json",
    "tsconfig.react-native.json",
    "tsconfig.react.json",
    "dist/**",
    "package.json",
    "README.md"
  ],
  "exports": {
    "./.eslintrc.cjs": "./.eslintrc.cjs",
    "./.eslintrc.next.cjs": "./.eslintrc.next.cjs",
    "./.prettierrc.cjs": "./.prettierrc.cjs",
    "./lint-staged": "./dist/lint-staged.config.js",
    "./lint-staged.config.js": "./lint-staged.config.js",
    "./tsconfig.base.json": "./tsconfig.base.json",
    "./tsconfig.jest.json": "./tsconfig.jest.json",
    "./tsconfig.next.json": "./tsconfig.next.json",
    "./tsconfig.node-14.json": "./tsconfig.node-14.json",
    "./tsconfig.node-16.json": "./tsconfig.node-16.json",
    "./tsconfig.react-native.json": "./tsconfig.react-native.json",
    "./tsconfig.react.json": "./tsconfig.react.json"
  },
  "scripts": {
    "build": "yarn clean && tsup lint-staged.config.js --format esm,cjs --dts --external react --minify --no-splitting --target node14",
    "dev": "tsup lint-staged.config.js --format esm,cjs --watch --dts --external react --minify --no-splitting --target node14",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "yarn clean && rm -rf node_modules",
    "semantic-release": "semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "@babel/core": "7.16.7",
    "@babel/eslint-parser": "7.16.5",
    "@typescript-eslint/eslint-plugin": "5.9.1",
    "@typescript-eslint/parser": "5.9.1",
    "eslint": "8.6.0",
    "eslint-config-next": "12.0.7",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "25.3.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "pretty-quick": "3.1.3",
    "typescript": "4.5.4"
  }
}
