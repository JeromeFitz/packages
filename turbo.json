{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "scripts/copy.sh",
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only",
      "outputs": ["dist/**", ".next/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "@jeromefitz/eslint-config#build",
        "@jeromefitz/prettier-config#build"
      ],
      "inputs": [
        "eslint.config.js",
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only"
    },
    "format:lint": {
      "cache": false,
      "dependsOn": []
    },
    "semantic-release": {
      "cache": false,
      "dependsOn": []
    },
    "semantic-release:dry": {
      "cache": false,
      "dependsOn": []
    },
    "test": {
      "dependsOn": ["lint", "build"],
      "outputLogs": "new-only",
      "outputs": ["coverage/**"]
    },
    "@jeromefitz/notion#build": {
      "dependsOn": ["@jeromefitz/utils#build"],
      "inputs": ["src/**", "*.cjs", "*.js", "*.mjs", "package.json"],
      "outputLogs": "new-only"
    },
    "@jeromefitz/semantic#build": {
      "dependsOn": [
        "@jeromefitz/conventional-gitmoji#build",
        "@jeromefitz/release-notes-generator#build"
      ],
      "inputs": ["src/**", "*.cjs", "*.js", "*.mjs", "package.json"],
      "outputLogs": "new-only"
    },
    "@jeromefitz/spotify#build": {
      "dependsOn": ["@jeromefitz/utils#build"],
      "inputs": ["src/**", "*.cjs", "*.js", "*.mjs", "package.json"],
      "outputLogs": "new-only"
    }
  },
  "ui": "stream"
}
