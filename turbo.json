{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "GH_TOKEN"
  ],
  "tasks": {
    "//#biome:check": {
      "outputLogs": "new-only"
    },
    "//#biome:write": {
      "cache": false,
      "outputLogs": "new-only"
    },
    "//#lint": {
      "dependsOn": [
        "@jeromefitz/prettier-config#build"
      ],
      "outputLogs": "new-only"
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "scripts/copy.sh",
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only",
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": [
        "@jeromefitz/prettier-config#build"
      ],
      "inputs": [
        "biome.json",
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only"
    },
    "semantic-release": {
      "cache": false,
      "dependsOn": []
    },
    "semantic-release:dry": {
      "cache": false,
      "dependsOn": []
    },
    "test": {
      "dependsOn": [
        "lint",
        "build"
      ],
      "outputLogs": "new-only",
      "outputs": [
        "coverage/**"
      ]
    },
    "@jeromefitz/notion#build": {
      "dependsOn": [
        "@jeromefitz/utils#build"
      ],
      "inputs": [
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only"
    },
    "@jeromefitz/semantic#build": {
      "dependsOn": [
        "@jeromefitz/conventional-gitmoji#build",
        "@jeromefitz/release-notes-generator#build"
      ],
      "inputs": [
        "src/**",
        "*.cjs",
        "*.js",
        "*.mjs",
        "package.json"
      ],
      "outputLogs": "new-only"
    }
  },
  "ui": "stream"
}
