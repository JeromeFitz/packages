{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "@jeromefitz/tsconfig-node-22",
  "extends": "./base.json",
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNext"
  }
}
