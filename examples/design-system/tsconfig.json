{
  "compilerOptions": {
    // "strict": false,
    // //
    // // w/ next-unused
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // // w/ extends
    // "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // @todo(lint)
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // @todo(lint)
    "outDir": "dist",
    "paths": {
      // "@jeromefitz/design-system/*": ["../../packages/design-system/dist/*"],
      // "@jeromefitz/design-system/*": ["../../packages/design-system/src/*"],
      "~components/*": ["src/components/*"],
      "~config/*": ["src/config/*"],
      "~containers/*": ["src/containers/*"],
      "~context/*": ["src/context/*"],
      "~custom/*": ["src/custom/*"],
      "~data/*": ["src/data/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~pages/*": ["src/pages/*"],
      "~scripts/*": ["src/scripts/*"],
      "~styles/*": ["src/styles/*"],
      "~svg/*": ["src/svg/*"],
      "~theme/*": ["src/theme/*"],
      "~utils/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    // "noUnusedParameters": false, // @todo(lint)
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false, // @todo(lint)
    "strictNullChecks": false, // @todo(lint)
    "strictPropertyInitialization": false, // @todo(lint)
    "target": "esnext"
  },
  "exclude": ["node_modules", "tests/*.test.ts"],
  "extends": "@jeromefitz/tsconfig/next.json",
  "include": ["src", "index.d.ts", "next-env.d.ts", ".next/types/**/*.ts"]
}
