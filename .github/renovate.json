{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":semanticCommitTypeAll(⬆️  )",
    ":semanticCommitScope(deps)"
  ],
  "baseBranches": ["main"],
  "branchPrefix": "deps/",
  "commitMessageAction": "",
  "commitMessagePrefix": "{{semanticCommitType}} ({{semanticCommitScope}}) ",
  "commitMessageExtra": "{{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{{newMajor}}}{{else}}{{#if isSingleVersion}}{{{newVersion}}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",
  "commitMessageTopic": " {{depName}}",
  "dependencyDashboard": false,
  "ignoreDeps": ["@types/node", "inquirer", "read-pkg-up", "typescript"],
  "labels": ["📦️ Dependencies"],
  "node": {
    "enabled": false,
    "semanticCommitScope": "node",
    "semanticCommitType": "📦  "
  },
  "packageRules": [
    {
      "groupName": "github actions :octocat: ...",
      "groupSlug": "github-acitons",
      "matchPackagePatterns": ["^actions"],
      "semanticCommitScope": "actions",
      "semanticCommitType": "👷  "
    },
    {
      "groupName": "eslint-config 📏 ...",
      "groupSlug": "eslint-config",
      "matchPackageNames": [
        "@babel/eslint-parser",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "prettier",
        "pretty-quick",
        "!eslint-config-next"
      ],
      "matchPackagePatterns": ["^eslint"]
    },
    {
      "groupName": "next 🔺 ...",
      "groupSlug": "next",
      "matchPackageNames": ["eslint-config-next", "next"]
    },
    {
      "groupName": "radix-ui 🌐 ...",
      "groupSlug": "radix-ui",
      "matchPackagePatterns": ["^@radix-ui/"]
    },
    {
      "groupName": "react ⚛️ ...",
      "groupSlug": "react",
      "matchPackageNames": ["react", "react-dom"]
    }
  ],
  "prBodyColumns": ["Package", "Update", "Type", "Change"],
  "prHourlyLimit": 2,
  "rebaseWhen": "conflicted",
  "semanticCommitScope": "deps",
  "semanticCommitType": "⬆️  ",
  "semanticCommits": "enabled"
}
