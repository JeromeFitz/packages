{
  "name": "@jeromefitz/packages",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "branch": "git-cz -m branch --allow-empty",
    "commit": "ALLOW_EMPTY=--allow-empty git commit --allow-empty",
    "generate:releaseRules": "node ./packages/semantic/scripts/generateReleaseRules.js && yarn lint:fix",
    "----": "",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "yarn clean && rm -rf node_modules",
    "---- ": "",
    "lint:eslint": "eslint . --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:prettier --write && yarn typescript",
    "lint:prettier": "prettier \"**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "lint:typescript": "yarn typescript",
    "lint": "yarn typescript && yarn lint:prettier --check && yarn lint:eslint",
    "pretty-quick": "pretty-quick",
    "typescript": "tsc --noEmit --declaration",
    "----  ": "",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "",
    "semantic-release": "yarn workspaces run semantic-release -e semantic-release-monorepo"
  },
  "devDependencies": {
    "@jeromefitz/semantic": "*",
    "@jeromefitz/semantic-config": "*",
    "dotenv": "10.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "pinst": "2.1.6",
    "semantic-release-monorepo": "7.0.5",
    "tsup": "5.11.7",
    "turbo": "1.0.19"
  },
  "turbo": {
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          ".next/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "@jeromefitz/git-cz#build": {
        "dependsOn": [
          "@jeromefitz/conventional-gitmoji#build"
        ]
      },
      "@jeromefitz/semantic#build": {
        "dependsOn": [
          "@jeromefitz/conventional-gitmoji#build"
        ]
      },
      "clean": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "lint": {
        "outputs": []
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": []
      }
    }
  }
}
