{
  "name": "@jeromefitz/packages",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/gitmojis"
    ]
  },
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=14"
  },
  "type": "module",
  "private": true,
  "scripts": {
    "branch": "git-cz -m branch --allow-empty",
    "commit": "ALLOW_EMPTY=--allow-empty git commit --allow-empty",
    "generate:gitmoji": "node ./packages/conventional-gitmoji/scripts/generateGitmojiToConventional.js && yarn lint:fix",
    "----": "",
    "build": "yarn workspaces run build",
    "test": "yarn workspaces run test",
    "---- ": "",
    "lint:eslint": "eslint . --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:fix": "yarn lint:eslint --fix && yarn lint:prettier --write && yarn typescript",
    "lint:prettier": "prettier \"**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\"",
    "lint:typescript": "yarn typescript",
    "lint": "yarn typescript && yarn lint:prettier --check && yarn lint:eslint",
    "pretty-quick": "pretty-quick",
    "typescript": "tsc --noEmit --declaration",
    "----  ": "",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "",
    "semantic-release": "multi-semantic-release"
  },
  "devDependencies": {
    "@types/lodash-es": "4.17.5",
    "dotenv": "10.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "lodash-es": "4.17.21",
    "pinst": "2.1.6"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  }
}
