{
  "name": "@jeromefitz/packages",
  "workspaces": {
    "packages": [
      "config/*",
      "examples/*",
      "packages/*"
    ],
    "nohoist": []
  },
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/packages.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@1.22.17",
  "type": "module",
  "private": true,
  "scripts": {
    "----": "# @turbo scripts",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "turbo run clean && ./scripts/clean.sh",
    "deduplicate": "npx yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "npx yarn-deduplicate -s fewer yarn.lock --list --fail",
    "---- ": "# @lint",
    "pretty-quick": "pretty-quick",
    "lint:fix": "turbo run lint:fx ",
    "lint": "turbo run lint",
    "----  ": "# @ci",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "# @semantic-release",
    "semantic-release": "yarn workspaces run semantic-release -e semantic-release-monorepo",
    "semantic-release:dry": "yarn workspaces run semantic-release -e semantic-release-monorepo",
    "semantic-release:turbo": "turbo run semantic-release:mono --no-cache --parallel --continue",
    "----    ": "# @development",
    "branch": "git-cz -m branch --allow-empty",
    "commit": "ALLOW_EMPTY=--allow-empty git commit --allow-empty",
    "generate:releaseRules": "node ./packages/semantic/scripts/generateReleaseRules.js && yarn lint:fix",
    "dry:run": "turbo run clean --scope=*git-cz* && turbo run build --scope=*git-cz* && node ./packages/git-cz/dist/cli",
    "ds:build": "turbo run build --scope=*design-system*",
    "ds:clean": "turbo run clean --scope=*design-system*",
    "ds:dev": "turbo run dev --scope=*design-system*"
  },
  "dependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@jeromefitz/eslint-config": "*",
    "@manypkg/cli": "0.19.1",
    "@types/is-ci": "3.0.0",
    "@types/node": "16.11.7",
    "dotenv": "16.0.1",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "pinst": "3.0.0",
    "semantic-release-monorepo": "7.0.5",
    "tsup": "6.0.1",
    "turbo": "1.2.14"
  }
}
